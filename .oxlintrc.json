{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "ignorePatterns": ["vue-flow/**", "excalidraw/**"],
  "categories": {
    "correctness": "error",
    "suspicious": "warn"
  },
  "rules": {
    "typescript/no-explicit-any": "error",
    "eslint/no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "overrides": [
    {
      "files": ["eslint-rules/**"],
      "rules": {
        "typescript/no-explicit-any": "off"
      }
    }
  ]
}
